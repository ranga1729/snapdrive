<Window x:Class="SnapDrive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapDrive"
        mc:Ignorable="d"
        Title="Snap Drive - Automate your backups" 
        Height="700" 
        Width="900"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid>
        <!--Side bar Area-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Define and import the sidebar here. use "Grid.Column="0" -->
        <Grid Grid.Column="0" Background="#1C2D41" VerticalAlignment="Stretch">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Snap Drive" FontSize="20" FontWeight="Bold" Foreground="#4DD0E1" Margin="10,0,0,10"/>
                <TextBlock Text="Automated Backup Solution" FontSize="10" Foreground="LightGray" Margin="10,0,0,20"/>

                <Button Content="Dashboard" Margin="5,10,5,10" Height="40" Background="#2F4B69" Foreground="White"/>
                <Button Content="My Devices" Margin="5,10,5,10" Height="40" Background="Transparent" Foreground="White"/>
                <Button Content="Sync History" Margin="5,10,5,10" Height="40" Background="Transparent" Foreground="White"/>
                <Button Content="Settings" Margin="5,10,5,10" Height="40" Background="Transparent" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!--Main content Area-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Main content : Header -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderBrush="#E9ECEF"
                    BorderThickness="0,0,0,1"
                    Padding="30,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="2" BlurRadius="4" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Dashboard"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50" 
                               Margin="0,0,0,5" />
                    <TextBlock Text="Monitor your backup devices and sync status" 
                               FontSize="14" 
                               Foreground="#6C757D"/>
                </StackPanel>
            </Border>

            <!--Main Content : Middle content -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" >
                <StackPanel>
                    <TextBlock Text="My Snap Drives" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <!-- Kingston USB -->
                    <Border Background="#FFF9E6" CornerRadius="5" Padding="10" Margin="0,0,0,10" BorderBrush="Red" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Kingston USB 3.0 (32GB)" FontWeight="Bold"/>
                                <TextBlock Text="Drive F: • New Device Detected" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="Initialize Device" Width="130" Margin="10,0,0,0" Background="#1976D2" Foreground="White"/>
                        </Grid>
                    </Border>

                    <!-- SanDisk Ultra -->
                    <Border Background="#F3FDF3" CornerRadius="5" Padding="10" BorderBrush="Red" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="SanDisk Ultra (64GB)" FontWeight="Bold"/>
                            <TextBlock Text="Drive E: • Work Backup Device" FontSize="12" Foreground="Gray"/>
                            <ProgressBar Value="75" Height="10" Margin="0,5" />
                            <TextBlock Text="Syncing... 75% complete (3 of 4 files)" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="White" Padding="20" >
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left" >
                    <Button Content="+ Initialize New Device" Width="160" Height="40" Background="#2196F3" Foreground="White" Margin="0,0,10,0"/>
                    <Button Content="⟳ Refresh Devices" Width="150" Height="40" Background="#3E4A59" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
