<UserControl x:Class="SnapDrive.Views.DevicePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnapDrive.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="Auto" Width="Auto">
    <Grid>
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
            
            <StackPanel Height="Auto">
                
                <TextBlock Text="My Drives" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400" Padding="0,0,10,0">
                    <StackPanel>
                        <local:DeviceCard_Syncing />
                        <local:DeviceCard_Synced />
                        <local:DeviceCard_Offline />
                        <local:DeviceCard_Synced />
                        <local:DeviceCard_Syncing />
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
