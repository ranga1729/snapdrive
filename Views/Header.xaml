<UserControl x:Class="SnapDrive.Views.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnapDrive.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="Auto" Width="Auto">
    <Grid>
        <Border Grid.Row="0"
        Background="White"
        BorderBrush="#E9ECEF"
        BorderThickness="0,0,0,1"
        Padding="30,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="2" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Dashboard"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50" 
                   Margin="0,0,0,5" />
                <TextBlock Text="Monitor your backup devices and sync status" 
                   FontSize="14" 
                   Foreground="#6C757D"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
